\newcommand{\marginhref}{
  \begingroup
  \@makeother\%\@makeother\#
  \@makemarginhref
}
\def\@makemarginhref#1#2{
  \marginnote{\href{#1}{#2}}
  \endgroup
}
\newcommand{\sidehref}{
  \begingroup
  \@makeother\%\@makeother\#
  \@makesidehref
}
\def\@makesidehref#1#2{
  \sidenote{\href{#1}{#2}}
  \endgroup
}
